{
	"name":"phpgram/phpgram",
	"license": "MIT",
	"description": "A very fast and lightweight Php Framework for small to enterprise applications.",
	"authors": [
		{
			"name": "JÃ¶rn Heinemann",
			"email": "j.heinemann1@web.de"
		}
	],
	"keywords": [
		"gram",
		"phpgram",
		"php",
		"framework"
	],

	"support": {
		"issues": "https://gitlab.com/grammm/php-gram/phpgram/issues",
		"source": "https://gitlab.com/grammm/php-gram/phpgram"
	},
	"require": {
		"php": "^7.1",
		"psr/http-message": "^1.0",
		"psr/http-server-handler": "^1.0",
		"psr/http-server-middleware": "^1.0",
		"psr/http-factory":"^1.0",
		"psr/container":"^1.0.0"
	},
	"require-dev": {
		"phpunit/phpunit": "^8",
		"nyholm/psr7":"^1.2.1",
		"nyholm/psr7-server":"^0.3.0"
	},
	"autoload": {
		"psr-4": {
			"Gram\\":"src/"
		},
		"files": [
			"src/general/gramHelpers.php"
		]
	},
	"autoload-dev": {
		"psr-4":{
			"Gram\\Test\\":"test/"
		}
	},
	"config": {
        "preferred-install": {
            "*": "dist"
        }
    },
	"extra": {
		"branch-alias": {
			"dev-master": "1.2.x-dev"
		}
	}
}